<div class="table-responsive mt-3">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col" width="25%" class="text-center">Branch</th>
            <th scope="col" width="32%" class="text-center">Subject Name</th>
            <th scope="col" width="25%" class="text-center">Subject Code</th>
            <th scope="col" width="13%" class="text-center">Remove Subject</th>
        </tr>
        </thead>
        <tbody>
        <% var allSubjects = ['cse', 'ece', 'me', 'ce', 'che', 'ee']; %>
        <% var trade, obj; %>
        <% for (var i = 0; i < allSubjects.length; i++) { %>
            <% trade = allSubjects[i]; %>
            <% for (var j = 0; j < subject.length; j++) { %>
                <% obj = subject[j]; %>
                <% if (trade === obj.branch) { %>
                    <tr class="table-info text-center">
                        <th scope="row"><%= trade.toUpperCase() %></th>
                        <td><%= obj.subject_name %></td>
                        <td><%= obj.subject_code.toUpperCase() %></td>
                        <td>
                            <form action="/admin/remove_subject" method="POST" id="<%= obj.subject_code %>" class="form-inline"
                                  onsubmit="return confirm('Are you sure?')"></form>
                            <input form="<%= obj.subject_code %>" type="hidden" name="subject_code" value="<%= obj.subject_code %>" class="form-control mr-sm-2"
                                   type="text">
                            <div class="text-center">
                                <button form="<%= obj.subject_code %>" class="btn btn-danger" type="submit">Remove</button>
                            </div>
                        </td>
                    </tr>
                <% } %>
            <% } %>
        <% } %>
        </tbody>
    </table>
</div>
<% include ./partials/messages %>
<form action="/admin/add_subject" method="POST" id="form" class="form-inline my-2 my-lg-0"></form>
<div class="container">
    <div class="row">
        <div class="col-md-4 mt-2">
            <input form="form" name="branch" class="form-control mr-sm-2" placeholder="Enter Branch Name"
                   type="text">
        </div>
        <div class="col-md-4 mt-2">
            <input form="form" name="subject_name" class="form-control mr-sm-2" placeholder="Enter Subject Name"
                   type="text">
        </div>
        <div class="col-md-4 mt-2">
            <input form="form" name="subject_code" class="form-control mr-sm-2" placeholder="Enter Subject Code"
                   type="text">
        </div>
    </div>
</div>
<div class="text-center mt-2">
    <button form="form" class="btn btn-info my-2 my-sm-0" type="submit">Add Subject</button>
</div>
<div class="container  mt-2">
    <div class="row justify-content-center text-center">
        <div class="col-md-4 ">
            <div class="list-group text-center text-dark">
                <h6 class="list-group-item list-group-item-action active"><strong>Branch name must follow the
                        format</strong></h6>
                <p class="list-group-item" style="font-size: small">'cse': Computer Science and Engineering</p>
                <p class="list-group-item" style="font-size: small">'ece': Electronics and Communication Engineering</p>
                <p class="list-group-item" style="font-size: small">'me': Mechanical Engineering</p>
                <p class="list-group-item" style="font-size: small">'ce': Civil Engineering</p>
                <p class="list-group-item" style="font-size: small">'ee': Electrical Engineering</p>
                <p class="list-group-item" style="font-size: small">'che': Chemical Engineering</p>
            </div>
        </div>
    </div>
</div>
